@model SteamMarketPlaceWeb.Models.UrlAppIViewModel

<div class="jumbotron">
    <div class="col-md-8 col-md-offset-4">
        @using (Html.BeginForm("Index", "Main", FormMethod.Post, new { @class = "form-inline" }))
        {
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-addon">Steam профиль</div>
                    @Html.TextBoxFor(x => Model.Url, null, new { @class = "form-control", @placeholder = "Cсылка на профиль" })
                </div>
            </div>
            <div class="form-group">
                @Html.EnumDropDownListFor(x => Model.AppID, "Выберите игру", new { @class = "form-control" })
            </div>
            <input type="submit" class="btn btn-primary" value="Отправить" />
        }
    </div>
</div>
